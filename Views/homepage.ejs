           </ul>
    <!------------------------------------------------------------------------------------->
    
    <!-- CREATE ROOM BOX-->
    <nav class="navbar navbar-dark bg-dark" id="create-room">
        <form id="form" action="/login" method="POST">
            <h1 id="title" style="margin-top: 40px;">CREATE CHAT ROOM</h1>
            <div class="form-group">
              <label for="exampleInputEmail1" id="deneme" style=" margin-left: 50%; -ms-transform: translate(-50%, -50%);
              transform: translate(-50%, -50%); margin-top: 60px;">Room-Name</label>
              <input type="name" class="form-control" style="width: 50%; margin: 0 auto;" placeholder="Enter Name" name="name">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" style=" margin-left: 50%; -ms-transform: translate(-50%, -50%);
                transform: translate(-50%, -50%); margin-top: 30px;" id="deneme" >User-Amount</label>
                <input type="number" class="form-control" style="width: 50%; margin: 0 auto;" id="exampleInputPassword1" placeholder="Amount" name="amount" oninput="this.value = this.value.replace(/[^2-9.]/g, '').replace(/(\..*?)\..*/g, '$1');">
            </div>
            <button type="submit" class="btn btn-success"id = "login">Login</button>
        </form>
    </nav> 
    <!-------------------------------------------------------------------------------------->
    
    <!-- CHAT SCREEN-->
    <div id="chat">
        <div id="isimler">
            <button class="btn btn-success" style="height: 55px; width: 100%; border: solid 5px black; border-left: 2px solid black; border-top: 2px solid black;">Send</button>
